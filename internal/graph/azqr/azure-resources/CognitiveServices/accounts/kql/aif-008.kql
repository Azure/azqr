// Check if Cognitive Services has local authentication disabled
resources
| where type =~ 'Microsoft.CognitiveServices/accounts'
| extend localAuthDisabled = properties.disableLocalAuth
| where isnull(localAuthDisabled) or localAuthDisabled == false
| extend recommendationId = 'aif-008'
| extend param1 = ''
| project recommendationId, name, id, tags, param1
