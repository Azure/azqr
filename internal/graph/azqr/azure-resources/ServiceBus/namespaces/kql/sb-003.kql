// Azure Resource Graph Query
// Find Service Bus namespaces and report their SLA based on SKU and zone redundancy
resources
| where type =~ 'Microsoft.ServiceBus/namespaces'
| extend skuTier = tostring(sku.tier)
| extend zoneRedundant = tobool(properties.zoneRedundant)
| extend slaValue = case(
    skuTier =~ "Premium" and zoneRedundant == true, "99.99%",
    "99.9%"
)
| project recommendationId = 'sb-003', name, id, tags, param1 = slaValue
