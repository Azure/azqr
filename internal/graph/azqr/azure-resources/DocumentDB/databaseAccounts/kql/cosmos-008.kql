// Check if CosmosDB has local authentication disabled
resources
| where type =~ 'Microsoft.DocumentDB/databaseAccounts'
| extend localAuthDisabled = properties.disableLocalAuth
| where isnull(localAuthDisabled) or localAuthDisabled == false
| extend recommendationId = 'cosmos-008'
| extend param1 = ''
| project recommendationId, name, id, tags, param1
