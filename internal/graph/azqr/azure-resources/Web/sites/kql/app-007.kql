// Azure Resource Graph Query
// Find App Services that don't have HTTPS only enabled
resources
| where type =~ "Microsoft.Web/sites"
| where kind !contains "function" and kind !contains "workflowapp"
| extend httpsOnly = properties.httpsOnly
| where isnull(httpsOnly) or httpsOnly == false
| project recommendationId = "app-007", name, id, tags, param1 = "HTTPS Only is disabled"
