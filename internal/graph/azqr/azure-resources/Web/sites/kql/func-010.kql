// Azure Resource Graph Query
// Find Function Apps that don't have VNET Route All enabled
resources
| where type =~ "Microsoft.Web/sites"
| where kind contains "function" and kind !contains "workflowapp"
| extend vnetRouteAllEnabled = properties.vnetRouteAllEnabled
| where isnull(vnetRouteAllEnabled) or vnetRouteAllEnabled == false
| project recommendationId = "func-010", name, id, tags, param1 = "VNET Route All is disabled"
