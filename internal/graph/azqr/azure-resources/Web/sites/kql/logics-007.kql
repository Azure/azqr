// Azure Resource Graph Query
// Find Logic Apps that don't have HTTPS only enabled
resources
| where type =~ "Microsoft.Web/sites"
| where kind contains "workflowapp"
| extend httpsOnly = properties.httpsOnly
| where isnull(httpsOnly) or httpsOnly == false
| project recommendationId = "logics-007", name, id, tags, param1 = "HTTPS Only is disabled"
