// Check if ML Service disables public network access
resources
| where type =~ 'Microsoft.MachineLearningServices/workspaces'
| extend publicNetworkAccess = properties.publicNetworkAccess
| where isnull(publicNetworkAccess) or publicNetworkAccess =~ 'Enabled'
| extend recommendationId = 'hub-004'
| extend param1 = ''
| project recommendationId, name, id, tags, param1
