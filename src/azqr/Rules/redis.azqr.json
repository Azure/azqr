[
    {
        "WorkflowName": "Redis",
        "Rules": [
            {
                "RuleName": "Avaliability Zones",
                "SuccessEvent": "20",
                "ErrorMessage": "Redis Cache is not protected against zone failures",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input1.Zones.Count() > 0",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Yes\""
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"No\""
                        }
                    }
                }
            },
            {
                "RuleName": "Private Endpoints",
                "SuccessEvent": "40",
                "ErrorMessage": "Redis Cache does not have Private Endpoints configured",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input1.PrivateEndpointConnections.Count() > 0",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "input1.PrivateEndpointConnections.Count()"
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"None\""
                        }
                    }
                }
            },
            {
                "RuleName": "CAF Naming",
                "SuccessEvent": "50",
                "ErrorMessage": "Redis Cache name should start with 'redis' as prefix",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input1.Name.StartsWith(\"redis\")",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Success\""
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Fail\""
                        }
                    }
                }
            },
            {
                "RuleName": "Non-SSL Port",
                "SuccessEvent": "60",
                "ErrorMessage": "Redis Cache should use a SSL port",
                "ErrorType": "Error",
                "RuleExpressionType": "LambdaExpression",
                "Expression": "input1.EnableNonSslPort == false",
                "Actions": {
                    "OnSuccess": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Success\""
                        }
                    },
                    "OnFailure": {
                        "Name": "OutputExpression",
                        "Context": {
                            "Expression": "\"Fail\""
                        }
                    }
                }
            }
        ]
    }
]